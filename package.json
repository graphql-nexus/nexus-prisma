    "typescript": "^4.2.3"
  },
  "prettier": "@prisma-labs/prettier-config",
  "peerDependencies": {
    "@prisma/client": "2.17.x || 2.18.x",
    "nexus": "^1.0.0"
  },
  "dependencies": {
    "@prisma/generator-helper": "^2.18.0",
    "debug": "^4.3.1",
    "endent": "^2.0.1",
    "fs-jetpack": "^4.1.0",
    "graphql-scalars": "^1.9.0",
    "kleur": "^4.1.4",
    "ono": "^7.1.3",
    "pkg-up": "^3.1.0",
    "pluralize": "^8.0.0",
    "semver": "^7.3.4",
    "setset": "^0.0.6",
    "tslib": "^2.1.0"
  },
  "nodemonConfig": {
    "events": {
      "start": "echo \"\\x1Bc\""
    }
  }
