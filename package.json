    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "dripip": "0.10.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-only-warn": "^1.0.2",
    "execa": "^5.0.0",
    "graphql": "^15.5.0",
    "jest": "26.6.3",
    "jest-watch-typeahead": "0.6.1",
    "lodash": "^4.17.21",
    "markdown-toc": "^1.2.0",
    "nexus": "^1.0.0",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "prisma": "2.18.0",
    "strip-ansi": "^6.0.0",
    "ts-jest": "26.5.3",
    "ts-node": "^9.1.1",
